{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"definitions": {
        "pdf": {
            "type": ["string", "boolean", "object"],
            "properties": {
                "browsers": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "chrome", 
                            "firefox",
                            "safari"
                        ]
                    }
                },
                "pages": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "sizes": {
                    "type": "array",
                    "items": {
                        "type": "array",
                        "items": {
                            "type": "number"
                        }
                    }
                },
                "url": {
                    "type": "string"
                },
                "wait": {
                    "type": ["string", "number"]
                }
            }
        }
	}
}