{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"definitions": {
        "phonegap": {
            "type": "object",
            "description": "Config for phonegap build settings",
            "additionalProperties": false,
            "properties": {
                "signingKey": {
                    "type": "string"
                },
                "signingPassword": {
                    "type": "string"
                },
                "badge": {
                    "type": "string"
                },
                "appID": {
                    "type": "string"
                },
                "phonegapVersion": {
                    "type": "string"
                },
                "bundle": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                },
                "orientation": {
                    "type": "string",
                    "enum": ["landscape", "portrait", "default"]
                },
                "platforms": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string",
                        "enum": ["ios", "android", "windows"]
                    }
                },
                "config": {
                    "description": "Cordova config settings that will be merged with defaults",
                    "additionalProperties": true
                },
                "ios": {
                    "description": "Cordova iOS platform settings that will be merged with defaults",
                    "additionalProperties": true
                },
                "android": {
                    "description": "Cordova android platform settings that will be merged with defaults",
                    "additionalProperties": true
                },
                "windows": {
                    "description": "Cordova windows platform settings that will be merged with defaults",
                    "additionalProperties": true
                }
            },
            "required": [
                "signingKey",
                "signingPassword",
                "badge",
                "appID",
                "phonegapVersion",
                "bundle"
            ]
        }
	}
}