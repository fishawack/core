{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"definitions": {
		"attributes": {
			"description": "Generally toggles and settings that effect the build rather than the content",
			"type": "object",
            "properties": {
            	"title": {
		        	"type": "string"
	            },
	            "googleTrackingID": {
		        	"type": ["string", "null"]
	            },
	            "root": {
		        	"type": "string"
	            },
	            "repo": {
		        	"type": "string"
	            },
	            "ratio": {
		        	"type": "string",
		        	"enum": ["16:9", "9:16", "4:3", "3:4"]
	            },
	            "code": {
		        	"type": "string"
	            },
	            "design": {
		        	"type": "string"
	            },
	            "electron": {
	            	"type": ["object", "boolean"],
					"properties": {
						"dependencies": {
							"type": "object",
							"additionalProperties": true
						}
					}
	            },
	            "cms": {
	            	"type": "string"
	            },
	            "phonegap": {
                	"type": "object",
					"additionalProperties": false,
					"properties": {
						"signingKey": {
							"type": "string"
						},
						"appID": {
							"type": "string"
						},
						"phonegapVersion": {
							"type": "string"
						},
						"bundle": {
							"type": "string"
						}
					},
					"required": ["signingKey", "appID", "phonegapVersion", "bundle"]
		    	},
	            "email": {
	            	"type": "array",
					"items": { "type": "string" }
	        	},
				"staging": {
		        	"$ref": "deploy.json#/definitions/deploy"
				},
				"qc": {
		        	"$ref": "deploy.json#/definitions/deploy"
				},
				"production": {
		        	"$ref": "deploy.json#/definitions/deploy"
				},
				"content": {
					"type": "array",
					"items": {
						"type": ["object", null],
						"allOf": [
							{
								"$ref": "deploy.json#/definitions/deploy"
							},
							{
								"type": "object",
								"properties": {
									"ext": {"type": ["string", "null"]},
									"endpoints": {
										"type": "array",
							        	"items": {
							        		"type": "string"
							        	}
							        },
							        "saveTo": {"type": ["string", "null"]}
								}
							}
						]
					}
				},
				"copy": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"src": {
								"type": ["string", "array", "null"],
								"items": {
									"type": "string"
								}
							},
							"dest": {
								"type": ["string", "array", "null"],
								"items": {
									"type": "string"
								}
							},
							"expand": {"type": "boolean"},
							"cwd": {"type": "string"}
						}
					}
				},
				"modernizr": {
					"type": "array",
					"items": {
						"type": "string"
					}
		        },
		        "env": {
		        	"type": "object",
		        	"additionalProperties": true
		        },
		        "uncss": {
		        	"type": "array",
		        	"items": {
		        		"type": "string"
		        	}
		        },
		        "splitChunks": {
		        	"description": "If true will pull out shared javascript librarys to a commons.js file",
		        	"type": "boolean"
		        },
		        "template": {
		        	"type": "object",
	    			"patternProperties": {
        				".*": {
        					"type": "object",
        					"properties": {
        						"location": {
        							"description": "Json file to load, defaults to content.json",
        							"type": "string"
        						},
				                "jsonPath": {
				                	"description": "Dot notation path to array of elements",
				                	"type": "string"
				                },
				                "partial": {
				                	"type": "string"
				                }
        					},
        					"required": ["partial"]
        				}
        			}
		        },
		        "toggle": {
		        	"type": "object",
		        	"patternProperties": {
        				"additionalProperties": true
        			}
		        }
            },
            "required": ["title", "repo", "root", "googleTrackingID", "modernizr", "uncss", "template", "toggle"]
		}
	}
}